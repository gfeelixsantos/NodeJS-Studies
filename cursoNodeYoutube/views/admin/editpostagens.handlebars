    <div class="alert alert-primary">{{ text }}</div>
    {{else }}
{{/each}}

<h2>Editar Postagem</h2>
<form action="/admin/postagem/edit" method="post">
  <div class="mb-3 input-group-sm w-25">
    <label for="tituloPostagem" class="form-label">Titulo postagem</label>
    <input type="hidden" id="idPostagem" name="idPostagem" value={{ buscaPostagem._id }}>
    <input type="text" class="form-control input-group-sm border-primary-subtle" id="tituloPostagem" name="tituloPostagem" value={{ buscaPostagem.titulo }}>
  </div>
  <div class="mb-3 input-group-sm w-25">
    <label for="categorias" class="form-label">Categoria</label>
    <select name="categorias" id="categorias" class="form-control">
      {{#each categorias}}
      <option value={{ nome }}>{{ nome }}</option>
      {{/each}}
    </select>
  </div>
  <div class="mb-3 input-group-sm w-25">
    <label for="conteudo" class="form-label">Conteudo</label>
    <input type="text" class="form-control input-group-sm border-primary-subtle" id="conteudo" name="conteudo" value={{ buscaPostagem.conteudo }}>
  </div>
  <button type="submit" class="btn btn-success">Salvar</button>
</form>
